---
import { CustomIcons } from './CustomIcon';

interface Props {
	name: keyof typeof CustomIcons;
	label?: string;
	color?: string;
	size?: string;
	class?: string;
	style?: string;
}

const { name, label, color="currentColor", size='1em', style='' } = Astro.props;
const a11yAttrs = label ? ({ 'aria-label': label } as const) : ({ 'aria-hidden': 'true' } as const);
---

<svg
	{...a11yAttrs}
	class={Astro.props.class}
	width="16"
	height="16"
	viewBox="0 0 24 24"
	fill="currentColor"
	style={style}
	set:html={CustomIcons[name]}
/>

<style define:vars={{ 'sl-icon-color': color, 'sl-icon-size': size }}>
	svg {
		color: var(--sl-icon-color);
		font-size: var(--sl-icon-size, 1em);
		width: 1em;
		height: 1em;
		overflow: visible;
	}

	.logo {
		fill: none;
		stroke: var(--sl-icon-color);
		stroke-width: 52;
		opacity: 1;
		stroke-linecap: round;
		stroke-linejoin: round;
		font-size: var(--sl-icon-size, 1em);
		width: 1em;
		height: 1em;
		overflow: visible;
	}
</style>